
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Principal">

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Elegir mesa"
        android:textColor="#FFF"
        android:id="@+id/selecionamesa"
        android:onClick="aprieta"
        android:layout_alignParentTop="true"
        android:background="#4183d7" />

        <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Resultados"
            android:textColor="#FFF"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/selecionamesa"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="cuenta"
            android:background="#4183d7" />


</RelativeLayout>

